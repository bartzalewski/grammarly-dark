{
  "manifest_version": 3,
  "name": "Grammarly Dark",
  "description": "A dark theme for Grammarly documents.",
  "version": "1.0.13",
  "content_scripts": [
    {
      "matches": [
        "https://app.grammarly.com/*",
        "https://account.grammarly.com/*"
      ],
      "css": ["theme/index.css"]
    }
  ],
  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "pages/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
